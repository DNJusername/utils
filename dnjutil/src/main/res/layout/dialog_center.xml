<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_style1"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提示信息"
        android:textColor="@color/colorBlack3"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_liner"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_left_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/select_corner_left_10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorBlack3"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray4" />

        <TextView
            android:id="@+id/dialog_right_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/select_corner_right_10"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorBlack3"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
</LinearLayout>